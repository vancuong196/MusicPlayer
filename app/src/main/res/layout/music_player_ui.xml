<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <LinearLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/background"
            android:orientation="vertical">

            <include layout="@layout/music_player_toolbar" />

            <TextView
                android:id="@+id/tv_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:paddingLeft="28dp"
                android:paddingTop="20dp"
                android:text="Look What You Made Me Do"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:paddingTop="8dp"
                android:id="@+id/tv_singer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingLeft="28dp"
                android:text="Taylor Swift"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="13dp" />


            <SeekBar
                android:paddingTop="15dp"
                android:id="@+id/skb_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:progressBackgroundTint="@color/white"
                android:theme="@style/MySeekBarTheme" />

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="26dp"
                    android:text="1:58"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="26dp"
                    android:text="3:12"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_repeat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingLeft="22dp"
            android:src="@drawable/repeat" />

        <ImageView
            android:id="@+id/btn_prev"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingLeft="22dp"
            android:src="@drawable/previous" />

        <LinearLayout

            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_height="50dp">

            <ImageView

                android:id="@+id/btn_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"

            android:background="@drawable/circle"
            android:padding="15dp"
                android:src="@drawable/pause" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingRight="22dp"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/btn_shuffle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingRight="22dp"
            android:src="@drawable/shuffle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Viewline" />

        <ListView

            android:id="@+id/lv_pending_songs"
        android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
</LinearLayout>

    <include
        android:id="@+id/miniLayout"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        layout="@layout/mini_player_widget"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</RelativeLayout>