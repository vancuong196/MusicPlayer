<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <RelativeLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/btn_back_arrow"
            android:layout_width="@dimen/music_player_toolbar_img_button_width"
            android:scaleType="fitXY"
            android:layout_height="@dimen/music_player_toolbar_img_button_layout_height"
            android:src="@drawable/back_arrow" />

        <TextView
            android:textColor="@color/white_color"
            android:gravity="center"
            android:textSize="@dimen/music_player_toolbar_img_tv_timer_size"
            android:paddingLeft="@dimen/music_player_toolbar_img_tv_timer_left"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_timer"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/btn_down_menu"
            android:layout_width="@dimen/music_player_toolbar_img_img_btn_menu_witdh"
            android:layout_height="@dimen/music_player_toolbar_img_img_btn_menu_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/music_player_toolbar_img_img_btn_menu_margin_end"
            android:layout_weight="2"
            android:src="@drawable/menu_arrow" />


    </RelativeLayout>


</android.support.v7.widget.Toolbar>