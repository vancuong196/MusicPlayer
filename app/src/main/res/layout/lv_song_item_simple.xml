<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/lv_song_layout_margin_top"
        android:layout_marginLeft="@dimen/lv_song_layout_margin_left"
        android:layout_marginBottom="@dimen/lv_song_layout_margin_bot">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean Bendit"
                android:textSize="@dimen/lv_song_tv_song_name_size"
                android:textColor="@color/textblue"
                android:id="@+id/song_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symponi ft. Zavra"
                android:layout_marginTop="@dimen/lv_song_tv_singer_name_margin_top"
                android:textSize="@dimen/lv_song_tv_singer_name_size"
                android:id="@+id/singer_name" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2:22"
            android:textSize="12.5dp"
            android:layout_weight="9"
            android:layout_gravity="center"
            android:id="@+id/time" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Viewline"
        android:layout_marginTop="10dp" />


</LinearLayout>